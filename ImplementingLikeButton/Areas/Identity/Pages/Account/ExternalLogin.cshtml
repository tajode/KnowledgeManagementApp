@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="card signin-card shadow bg-white rounded pe-2 ps-2">
    <div class="card-body signin-card-body">
        <h5 id="external-login-title" class="signin-card-title text-warm fs-2 fw-bold">
            Associate your @Model.ProviderDisplayName account.
        </h5>
        <h6><span class="badge bg-warm mt-2">Karibu mzazi.</span></h6>
        <p id="external-login-description" class="text-info">
            You've warmfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
            Please enter an email address for this site below and click the Register button to finish
            logging in.
        </p>

        <div>
            <section>
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signin-textbox-group">
                            <input asp-for="Input.Email" class="form-control signin-textboxes" autocomplete="email" placeholder="My email address is ..." aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger signin-validation-text"></span>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-warm btn-lg signin-button">Register</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
