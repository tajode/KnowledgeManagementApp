@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="card signin-card shadow bg-white rounded pe-2 ps-2">
    <div class="card-body signin-card-body">
        <h5 class="signin-card-title text-warm fs-2 fw-bold">
            Sign in
        </h5>
        <h6><span class="badge bg-warm mt-2">Welcome again.</span></h6>
        <p>
            You have requested to log in with a recovery code. This login will not be remembered until you provide
            an authenticator app code at log in or disable 2FA and log in again.
        </p>

        <div>
            <section>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signin-textbox-group">
                            <input asp-for="Input.RecoveryCode" class="form-control signin-textboxes" autocomplete="off" placeholder="My recovery code is ..." />
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger signin-validation-text"></span>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-warm btn-lg signin-button">Sign in</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}