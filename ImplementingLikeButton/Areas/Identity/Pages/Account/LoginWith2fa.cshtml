@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="card signin-card shadow bg-white rounded pe-2 ps-2">
    <div class="card-body signin-card-body">
        <h5 class="signin-card-title text-warm fs-2 fw-bold">
            Ingia
        </h5>
        <h6><span class="badge bg-warm mt-2">Welcome again.</span></h6>

        <div>
            <section>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signin-textbox-group">
                            <input asp-for="Input.TwoFactorCode" class="form-control signin-textboxes" autocomplete="off" placeholder="My recovery code is ..." />
                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger signin-validation-text"></span>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-warm btn-lg signin-button">Sign in</button>
                        </div>

                        <div class="or-separator mt-lg-3 snapple-seperator">
                            <span class="or-text">or</span>
                        </div>
                    </div>

                    <div class="join-now-div">
                        <p> Don't have access to your authenticator device? You can &nbsp</p><a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="join-now-link">log in with a recovery code</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}